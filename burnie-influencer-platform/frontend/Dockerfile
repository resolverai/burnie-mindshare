# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Accept build arguments for NEXT_PUBLIC_ variables
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_BACKEND_URL
ARG NEXT_PUBLIC_AI_BACKEND_URL
ARG NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID
ARG NEXT_PUBLIC_DEFAULT_CHAIN_ID
ARG NEXT_PUBLIC_BASE_RPC_URL
ARG NEXT_PUBLIC_ROAST_TOKEN_ADDRESS
ARG NEXT_PUBLIC_USDC_BASE_ADDRESS
ARG NEXT_PUBLIC_MINING_INTERFACE_URL
ARG NEXT_PUBLIC_CONTRACT_ROAST_TOKEN
ARG NEXT_PUBLIC_TREASURY_WALLET_ADDRESS
ARG NEXT_PUBLIC_TWITTER_CLIENT_ID
ARG NEXT_PUBLIC_YAPPER_TWITTER_REDIRECT_URI
ARG NEXT_PUBLIC_APP_NAME
ARG NEXT_PUBLIC_APP_DESCRIPTION
ARG NEXT_PUBLIC_BURNIE_WS_URL
# Somnia Testnet Configuration
ARG NEXT_PUBLIC_SOMNIA_CHAIN_ID
ARG NEXT_PUBLIC_SOMNIA_RPC_URL
ARG NEXT_PUBLIC_SOMNIA_EXPLORER_URL
ARG NEXT_PUBLIC_TOAST_TOKEN_ADDRESS
ARG NEXT_PUBLIC_CONTENT_REGISTRY_ADDRESS
ARG NEXT_PUBLIC_REWARD_DISTRIBUTION_ADDRESS
ARG NEXT_PUBLIC_FRONTEND_URL
ARG NODE_ENV

# Set environment variables from build args
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}
ENV NEXT_PUBLIC_BACKEND_URL=${NEXT_PUBLIC_BACKEND_URL}
ENV NEXT_PUBLIC_AI_BACKEND_URL=${NEXT_PUBLIC_AI_BACKEND_URL}
ENV NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=${NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID}
ENV NEXT_PUBLIC_DEFAULT_CHAIN_ID=${NEXT_PUBLIC_DEFAULT_CHAIN_ID}
ENV NEXT_PUBLIC_BASE_RPC_URL=${NEXT_PUBLIC_BASE_RPC_URL}
ENV NEXT_PUBLIC_ROAST_TOKEN_ADDRESS=${NEXT_PUBLIC_ROAST_TOKEN_ADDRESS}
ENV NEXT_PUBLIC_USDC_BASE_ADDRESS=${NEXT_PUBLIC_USDC_BASE_ADDRESS}
ENV NEXT_PUBLIC_MINING_INTERFACE_URL=${NEXT_PUBLIC_MINING_INTERFACE_URL}
ENV NEXT_PUBLIC_CONTRACT_ROAST_TOKEN=${NEXT_PUBLIC_CONTRACT_ROAST_TOKEN}
ENV NEXT_PUBLIC_TREASURY_WALLET_ADDRESS=${NEXT_PUBLIC_TREASURY_WALLET_ADDRESS}
ENV NEXT_PUBLIC_TWITTER_CLIENT_ID=${NEXT_PUBLIC_TWITTER_CLIENT_ID}
ENV NEXT_PUBLIC_YAPPER_TWITTER_REDIRECT_URI=${NEXT_PUBLIC_YAPPER_TWITTER_REDIRECT_URI}
ENV NEXT_PUBLIC_APP_NAME=${NEXT_PUBLIC_APP_NAME}
ENV NEXT_PUBLIC_APP_DESCRIPTION=${NEXT_PUBLIC_APP_DESCRIPTION}
ENV NEXT_PUBLIC_BURNIE_WS_URL=${NEXT_PUBLIC_BURNIE_WS_URL}
# Somnia Testnet Configuration
ENV NEXT_PUBLIC_SOMNIA_CHAIN_ID=${NEXT_PUBLIC_SOMNIA_CHAIN_ID}
ENV NEXT_PUBLIC_SOMNIA_RPC_URL=${NEXT_PUBLIC_SOMNIA_RPC_URL}
ENV NEXT_PUBLIC_SOMNIA_EXPLORER_URL=${NEXT_PUBLIC_SOMNIA_EXPLORER_URL}
ENV NEXT_PUBLIC_TOAST_TOKEN_ADDRESS=${NEXT_PUBLIC_TOAST_TOKEN_ADDRESS}
ENV NEXT_PUBLIC_CONTENT_REGISTRY_ADDRESS=${NEXT_PUBLIC_CONTENT_REGISTRY_ADDRESS}
ENV NEXT_PUBLIC_REWARD_DISTRIBUTION_ADDRESS=${NEXT_PUBLIC_REWARD_DISTRIBUTION_ADDRESS}
ENV NEXT_PUBLIC_FRONTEND_URL=${NEXT_PUBLIC_FRONTEND_URL}
ENV NODE_ENV=${NODE_ENV:-production}

# Copy package files for dependency caching
COPY package*.json ./
COPY bun.lock* ./

# Install dependencies (cached layer if package files unchanged)
RUN npm install

# Copy .env files if they exist (for NEXT_PUBLIC_ variables during build)
COPY .env* ./

# Copy source code (only invalidates cache when source changes)
COPY . .

# Remove node_modules if accidentally copied
RUN rm -rf node_modules

# Reinstall to ensure clean state
RUN npm ci

# Build the application (NEXT_PUBLIC_ vars will be embedded)
RUN npm run build

# Production stage
FROM node:18-alpine AS runner

WORKDIR /app

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built application
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static

# Create cache directory with proper permissions
RUN mkdir -p .next/cache && chown -R nextjs:nodejs .next/cache
RUN mkdir -p /tmp/next-cache && chown -R nextjs:nodejs /tmp/next-cache

# Set correct permissions
USER nextjs

EXPOSE 3004

ENV NODE_ENV=production
ENV PORT=3004
# Set cache directory to writable location
ENV NEXT_CACHE_DIR=/tmp/next-cache

CMD ["node", "server.js"]
