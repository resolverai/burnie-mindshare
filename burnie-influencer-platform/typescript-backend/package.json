{
  "name": "roastpower-backend",
  "version": "1.0.0",
  "description": "RoastPower Burnie Platform - TypeScript Backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --ignore-watch logs --ignore-watch uploads --no-notify --max-old-space-size=1024 src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "setup-db": "node setup-database.js",
    "setup": "npm run setup-db && npm run dev",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "twitter-learning": "ts-node src/jobs/twitterLearningJob.ts",
    "twitter-learning:start": "ts-node src/jobs/twitterLearningJob.ts start",
    "twitter-learning:once": "ts-node src/jobs/twitterLearningJob.ts run-once",
    "twitter-learning:status": "ts-node src/jobs/twitterLearningJob.ts status",
    "manage-referral-payouts": "ts-node src/scripts/manage-referral-payouts.ts"
  },
  "keywords": [
    "roastpower",
    "blockchain",
    "ai",
    "content-mining",
    "typescript",
    "express",
    "socket.io",
    "campaign-management",
    "analytics",
    "social-media"
  ],
  "author": "RoastPower Team",
  "license": "MIT",
  "dependencies": {
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^6.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.13",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "csv-parser": "^3.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "ethers": "6",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mammoth": "^1.11.0",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-fetch": "2",
    "node-schedule": "^2.1.1",
    "pdf-parse": "^2.4.5",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.0",
    "twitter-api-v2": "^1.15.2",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "viem": "^2.34.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/node-schedule": "^2.1.5",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
