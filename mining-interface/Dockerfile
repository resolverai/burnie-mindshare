# Build stage
FROM node:18-alpine AS builder

WORKDIR /app

# Accept build arguments for NEXT_PUBLIC_ variables
ARG NEXT_PUBLIC_BURNIE_API_URL
ARG NEXT_PUBLIC_AI_API_URL
ARG NEXT_PUBLIC_BURNIE_WS_URL
ARG NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID
ARG NEXT_PUBLIC_DEFAULT_CHAIN_ID
ARG NEXT_PUBLIC_BASE_RPC_URL
ARG NEXT_PUBLIC_ROAST_TOKEN_ADDRESS
ARG NEXT_PUBLIC_USDC_BASE_ADDRESS
ARG NEXT_PUBLIC_TWITTER_CLIENT_ID
ARG NEXT_PUBLIC_TWITTER_REDIRECT_URI
ARG NEXT_PUBLIC_ENVIRONMENT
ARG NEXT_PUBLIC_AGENT_STORAGE_URL

# Set environment variables from build args
ENV NEXT_PUBLIC_BURNIE_API_URL=${NEXT_PUBLIC_BURNIE_API_URL}
ENV NEXT_PUBLIC_AI_API_URL=${NEXT_PUBLIC_AI_API_URL}
ENV NEXT_PUBLIC_BURNIE_WS_URL=${NEXT_PUBLIC_BURNIE_WS_URL}
ENV NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=${NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID}
ENV NEXT_PUBLIC_DEFAULT_CHAIN_ID=${NEXT_PUBLIC_DEFAULT_CHAIN_ID}
ENV NEXT_PUBLIC_BASE_RPC_URL=${NEXT_PUBLIC_BASE_RPC_URL}
ENV NEXT_PUBLIC_ROAST_TOKEN_ADDRESS=${NEXT_PUBLIC_ROAST_TOKEN_ADDRESS}
ENV NEXT_PUBLIC_USDC_BASE_ADDRESS=${NEXT_PUBLIC_USDC_BASE_ADDRESS}
ENV NEXT_PUBLIC_TWITTER_CLIENT_ID=${NEXT_PUBLIC_TWITTER_CLIENT_ID}
ENV NEXT_PUBLIC_TWITTER_REDIRECT_URI=${NEXT_PUBLIC_TWITTER_REDIRECT_URI}
ENV NEXT_PUBLIC_ENVIRONMENT=${NEXT_PUBLIC_ENVIRONMENT}
ENV NEXT_PUBLIC_AGENT_STORAGE_URL=${NEXT_PUBLIC_AGENT_STORAGE_URL}
ENV NODE_ENV=production

# Copy package files
COPY package*.json ./
COPY bun.lock* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create public directory if it doesn't exist
RUN mkdir -p public

# Copy .env file if it exists (for NEXT_PUBLIC_ variables during build)
COPY .env* ./

# Build the application (NEXT_PUBLIC_ vars will be embedded)
RUN npm run build

# Production stage
FROM node:18-alpine AS runner

WORKDIR /app

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built application
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static

# Set correct permissions
USER nextjs

EXPOSE 3000

ENV NODE_ENV=production
ENV PORT=3000

CMD ["node", "server.js"]
